<Window x:Class="DinerMax3000WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinerMax3000.WPFClient"
        mc:Ignorable="d"
        Title="Diner Max 3000" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:DinerMax3000ViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <ComboBox SelectedItem="{Binding SelectedMenu}" ItemsSource="{Binding AllMenus}" DisplayMemberPath="name"></ComboBox>
            <DataGrid ItemsSource="{Binding SelectedMenu.items}"/>
            <WrapPanel>
                <Label>Title</Label>
                <TextBlock Width="150" Text="{Binding NewMenuItem.title}"></TextBlock>
                <Label>Price</Label>
                <TextBlock Width="50" Text="{Binding NewMenuItem.price}"></TextBlock>
            </WrapPanel>
            <Label>Description</Label>
            <TextBlock Text="{Binding NewMenuItem.description}"></TextBlock>
            
            <Button>Save Menu Item</Button>
        </StackPanel>
    </Grid>
</Window>
